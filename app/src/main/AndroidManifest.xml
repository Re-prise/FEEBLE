<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.musicstream">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MusicStream"
        android:windowSoftInputMode="stateHidden|adjustResize">
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <action android:name="android.intent.action.PICK_ACTIVITY"/>
             </intent-filter>
        </activity>
            <activity android:name=".ui.login.LoginActivity" >
                <intent-filter>
                    <action android:name="android.intent.action.MAIN" />
                    <category android:name="android.intent.category.LAUNCHER" />
                    <action android:name="android.intent.action.PICK_ACTIVITY" />
                </intent-filter>
            </activity>
        <activity android:name=".PlaySongActivity"/>
        <activity android:name=".PlaySongActivity2"/>
        <activity android:name=".SettingsActivity" />
        <activity android:name=".Settingsprofile" />
        <activity android:name=".ArtistRecommendedActivity">
            <intent-filter>
                <action android:name="android.intent.action.PICK_ACTIVITY"/>
            </intent-filter>
        </activity>
        <activity android:name=".CollectionsActivity">
            <intent-filter>
                <action android:name="android.intent.action.PICKACTIVITY"/>
            </intent-filter>
        </activity>
        <activity android:name=".PlaylistActivity"/>
    </application>
</manifest>