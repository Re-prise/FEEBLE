<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ArtistRecommendedActivity">

    <Button
        android:id="@+id/toolbar_button_right_artist"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="136dp"
        android:layout_height="50dp"
        android:background="@color/purple_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/toolbar_button_settings_artist"
        android:layout_width="136dp"
        android:layout_height="50dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/desc"
        android:onClick="globallyTravelToSettings"
        android:scaleType="fitXY"
        android:scaleX="0.25"
        android:scaleY="0.9"
        android:src="@drawable/settings_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.996"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/toolbar_button_middle_artist"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:background="@color/purple_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/toolbar_button_collection_artist"
        android:layout_width="136dp"
        android:layout_height="50dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/desc"
        android:onClick="globallyTravelToCollections"
        android:scaleType="fitXY"
        android:scaleX="0.2"
        android:scaleY="0.5"
        android:src="@drawable/collection_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/toolbar_button_left_artist"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="136dp"
        android:layout_height="50dp"
        android:layout_marginStart="140dp"
        android:background="@color/purple_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/toolbar_button_home_artist"
        android:layout_width="139dp"
        android:layout_height="50dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/desc"
        android:onClick="globallyTravelToHome"
        android:scaleType="fitCenter"
        android:src="@drawable/home_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/cover_artist_ArtistCover"
        android:layout_width="410dp"
        android:layout_height="374dp"
        android:contentDescription="@string/desc"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/artist_cover_jj" />

    <ImageButton
        android:id="@+id/btnBack_artist"
        style="@android:style/Widget.DeviceDefault.Light.ImageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="350dp"
        android:layout_marginBottom="350dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/desc"
        android:onClick="bacKk"
        android:scaleType="fitCenter"
        android:src="@drawable/back_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtView_artist_ArtistName"
        android:layout_width="412dp"
        android:layout_height="60dp"
        android:layout_marginBottom="436dp"
        android:background="@color/purple_light"
        android:fontFamily="@font/theoneilluseveryoften"
        android:text="@string/artist_artist"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cover_artist_ArtistCover" />


    <Button
        android:id="@+id/btn_artist_playlist1"
        android:layout_width="412dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#00000000"
        android:onClick="globallyTravelToPlaylist1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtView_artist_ArtistName"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/btnMore_artist"
        android:layout_width="50dp"
        android:layout_height="16dp"
        android:layout_marginStart="362dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="19dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/desc"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/btn_artist_playlist1"
        app:layout_constraintEnd_toEndOf="@+id/btn_artist_playlist1"
        app:layout_constraintStart_toStartOf="@+id/btn_artist_playlist1"
        app:layout_constraintTop_toTopOf="@+id/btn_artist_playlist1"
        app:srcCompat="@drawable/more_options_button" />

    <TextView
        android:id="@+id/txtView_artist_AlbumName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="334dp"
        android:text="@string/artist_album"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_artist_playlist1"
        app:layout_constraintEnd_toEndOf="@+id/btn_artist_playlist1"
        app:layout_constraintStart_toStartOf="@+id/btn_artist_playlist1"
        app:layout_constraintTop_toTopOf="@+id/btn_artist_playlist1"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/cover_artist_song1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="358dp"
        android:contentDescription="@string/desc"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/btn_artist_playlist1"
        app:layout_constraintEnd_toEndOf="@+id/btn_artist_playlist1"
        app:layout_constraintStart_toStartOf="@+id/btn_artist_playlist1"
        app:layout_constraintTop_toTopOf="@+id/btn_artist_playlist1"
        app:srcCompat="@drawable/jj_lin_dang_ni" />

</androidx.constraintlayout.widget.ConstraintLayout>