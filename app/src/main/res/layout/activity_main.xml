<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/recommend_song_cover"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="350dp"
        android:layout_marginBottom="94dp"
        android:contentDescription="@string/desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/recommended_song"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.408"
        app:srcCompat="@drawable/li_kai_ni_yi_hou" />

    <Button
        android:id="@+id/recommended_song"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="411dp"
        android:layout_height="50dp"
        android:layout_marginBottom="94dp"
        android:background="#00000000"
        android:backgroundTint="#00000000"
        android:onClick="goToPlaySong"
        app:layout_constraintBottom_toTopOf="@+id/Header_Main_Artists"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Header_Main_Songs"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Header_Main_Your_Playlists"
        android:layout_width="412dp"
        android:layout_height="50dp"
        android:background="@color/purple_light"
        android:fontFamily="@font/theoneilluseveryoften"
        android:text="@string/yourPlaylist"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/white"
        android:textColorLink="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SearchView" />

    <SearchView
        android:id="@+id/SearchView"
        android:layout_width="412dp"
        android:layout_height="47dp"
        android:background="#85FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Toolbar_button_right"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="136dp"
        android:layout_height="50dp"
        android:background="@color/purple_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/Toolbar_button_middle" />

    <Button
        android:id="@+id/Toolbar_button_middle"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:background="@color/purple_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Toolbar_button_left" />

    <Button
        android:id="@+id/Toolbar_button_left"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="136dp"
        android:layout_height="50dp"
        android:background="@color/purple_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/Playlist_coverimg"
        android:layout_width="101dp"
        android:layout_height="104dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/desc"
        android:scaleType="centerCrop"
        android:src="@drawable/playlist_cover_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Header_Main_Your_Playlists" />

    <ImageButton
        android:id="@+id/playlist_coverimg"
        android:layout_width="101dp"
        android:layout_height="104dp"
        android:layout_marginStart="104dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/desc"
        android:scaleType="centerCrop"
        android:src="@drawable/playlist_cover_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Header_Main_Your_Playlists" />

    <TextView
        android:id="@+id/Header_Main_Artists"
        android:layout_width="412dp"
        android:layout_height="50dp"
        android:layout_marginTop="144dp"
        android:layout_marginBottom="193dp"
        android:background="@color/purple_light"
        android:fontFamily="@font/theoneilluseveryoften"
        android:text="@string/artistsYouMayLike"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/Toolbar_button_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Header_Main_Songs" />

    <TextView
        android:id="@+id/PlaylistName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="26dp"
        android:fontFamily="@font/theoneilluseveryoften"
        android:text="@string/myPlaylistHeader"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/playlist_button"
        app:layout_constraintEnd_toEndOf="@+id/Playlist_coverimg"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Playlist_coverimg" />

    <TextView
        android:id="@+id/PlaylistName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="26dp"
        android:fontFamily="@font/theoneilluseveryoften"
        android:text="@string/myplaylistst"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/playlist_button2"
        app:layout_constraintEnd_toEndOf="@+id/playlist_button2"
        app:layout_constraintStart_toStartOf="@+id/playlist_button2"
        app:layout_constraintTop_toTopOf="@+id/playlist_button2" />

    <Button
        android:id="@+id/playlist_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="103dp"
        android:layout_height="151dp"
        android:layout_marginEnd="350dp"
        android:background="#00FFFFFF"
        android:onClick="goToPlaylist"
        app:layout_constraintBottom_toTopOf="@+id/Header_Main_Songs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Header_Main_Your_Playlists"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/playlist_button2"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="103dp"
        android:layout_height="151dp"
        android:layout_marginStart="350dp"
        android:layout_marginEnd="350dp"
        android:background="#00FFFFFF"
        android:onClick="goToPlaylistst"
        app:layout_constraintBottom_toTopOf="@+id/Header_Main_Songs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.63"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Header_Main_Your_Playlists"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Header_Main_Songs"
        android:layout_width="412dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:background="@color/purple_light"
        android:fontFamily="@font/theoneilluseveryoften"
        android:text="@string/songsYouMayLikeHeader"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Header_Main_Your_Playlists"
        app:layout_constraintVertical_bias="0.001" />

    <ImageButton
        android:id="@+id/Toolbar_button_collection"
        android:layout_width="136dp"
        android:layout_height="50dp"
        android:layout_marginTop="194dp"
        android:background="#00CC8CFE"
        android:backgroundTint="#00CC8CFE"
        android:backgroundTintMode="multiply"
        android:contentDescription="@string/desc"
        android:onClick="goToCollections"
        android:scaleType="fitXY"
        android:scaleX="0.2"
        android:scaleY="0.5"
        android:src="@drawable/collection_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Toolbar_button_middle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Header_Main_Artists"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/Toolbar_button_home"
        android:layout_width="139dp"
        android:layout_height="50dp"
        android:layout_marginTop="387dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/desc"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_home_filled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Toolbar_button_right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/Toolbar_button_collection"
        app:layout_constraintTop_toBottomOf="@+id/Header_Main_Songs"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/Toolbar_button_settings"
        android:layout_width="136dp"
        android:layout_height="50dp"
        android:layout_marginTop="194dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/desc"
        android:onClick="goToSettings"
        android:scaleType="fitXY"
        android:scaleX="0.25"
        android:scaleY="0.9"
        android:src="@drawable/settings_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Header_Main_Artists"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/artist_recommended_image"
        style="@android:style/Widget.DeviceDefault.Light.ImageButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/desc"
        android:scaleType="fitXY"
        android:scaleX="1.25"
        android:scaleY="1.25"
        android:src="@drawable/artist_cover_jjlin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Header_Main_Artists" />

    <ImageButton
        android:id="@+id/artist_recommended_image2"
        style="@android:style/Widget.DeviceDefault.Light.ImageButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/desc"
        android:scaleType="fitXY"
        android:scaleX="1.25"
        android:scaleY="1.25"
        android:src="@drawable/ic_cover_artist_jokerx"
        app:layout_constraintBottom_toBottomOf="@+id/artist_recommeded_button2"
        app:layout_constraintEnd_toEndOf="@+id/artist_recommeded_button2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/artist_recommeded_button2"
        app:layout_constraintTop_toTopOf="@+id/artist_recommeded_button2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/artist_recommended_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/artist_recommeded"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/artist_recommeded_button"
        app:layout_constraintStart_toStartOf="@+id/artist_recommeded_button"
        app:layout_constraintTop_toBottomOf="@+id/artist_recommended_image" />

    <TextView
        android:id="@+id/artist_recommended_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:text="@string/jokerxue"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/artist_recommeded_button2"
        app:layout_constraintEnd_toEndOf="@+id/artist_recommeded_button2"
        app:layout_constraintStart_toStartOf="@+id/artist_recommeded_button2"
        app:layout_constraintTop_toTopOf="@+id/artist_recommended_image2" />

    <Button
        android:id="@+id/artist_recommeded_button"
        android:layout_width="103dp"
        android:layout_height="127dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="350dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="goToArtist"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.53" />

    <Button
        android:id="@+id/artist_recommeded_button2"
        android:layout_width="103dp"
        android:layout_height="127dp"
        android:layout_marginStart="350dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="350dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="goToArtist2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.637"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.53" />

    <TextView
        android:id="@+id/recommend_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="29dp"
        android:fontFamily="@font/theoneilluseveryoften"
        android:text="@string/mainSong"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.367" />

    <TextView
        android:id="@+id/recommend_artist_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/theoneilluseveryoften"
        android:text="@string/byLine"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.174"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.365" />

</androidx.constraintlayout.widget.ConstraintLayout>